  <script>
  const textarea = document.querySelector('.input-box textarea');
  const sendBtn = document.querySelector('.send');
  const history = document.querySelector('.history');
  const chatBox = document.getElementById('chat-response');

  // —Ö—Ä–∞–Ω–∏–ª–∏—â–µ –¥–∏–∞–ª–æ–≥–æ–≤
  const dialogs = [];

  function renderChat(dialog) {
    chatBox.innerHTML = '';
    chatBox.style.display = 'flex';

    dialog.messages.forEach(msg => {
      const bubble = document.createElement('div');
      bubble.style.maxWidth = '70%';
      bubble.style.padding = '14px 18px';
      bubble.style.borderRadius = '18px';
      bubble.style.marginBottom = '8px';

      if (msg.role === 'user') {
        bubble.style.alignSelf = 'flex-end';
        bubble.style.background = 'linear-gradient(135deg, #5b7cff, #7b5bff)';
        bubble.textContent = msg.text;
      } else {
        bubble.style.alignSelf = 'flex-start';
        bubble.style.background = '#1a1e27';
        bubble.innerHTML = '<span style="opacity:0.7">ü§ñ AI –¥—É–º–∞–µ—Ç‚Ä¶</span>';
      }

      chatBox.appendChild(bubble);
    });
  }

  function sendMessage() {
    const text = textarea.value.trim();
    if (!text) return;

    // —Å–æ–∑–¥–∞—Ç—å –Ω–æ–≤—ã–π –¥–∏–∞–ª–æ–≥
    const dialog = {
      title: text.length > 40 ? text.slice(0, 40) + '‚Ä¶' : text,
      messages: [
        { role: 'user', text },
        { role: 'ai', text: '' }
      ]
    };

    dialogs.push(dialog);

    // –ø–æ–∫–∞–∑–∞—Ç—å –∏—Å—Ç–æ—Ä–∏—é
    if (!history.querySelector('h3')) {
      history.innerHTML = '<h3>–ò—Å—Ç–æ—Ä–∏—è –∑–∞–ø—Ä–æ—Å–æ–≤</h3>';
    }

    const item = document.createElement('div');
    item.className = 'history-item';
    item.textContent = dialog.title;
    history.appendChild(item);

    item.addEventListener('click', () => {
      renderChat(dialog);
    });

    renderChat(dialog);
    textarea.value = '';
  }

  sendBtn.addEventListener('click', sendMessage);

  textarea.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  });
</script>
  <script>
    const textarea = document.querySelector('.input-box textarea');
    const sendBtn = document.querySelector('.send');
    const history = document.querySelector('.history');

    function sendMessage() {
      const text = textarea.value.trim();
      if (!text) return;

      const item = document.createElement('div');
      item.className = 'history-item';
      item.textContent = text.length > 40 ? text.slice(0, 40) + '‚Ä¶' : text;
      history.appendChild(item);

      item.addEventListener('click', () => {
        chatBox.innerHTML = '';

        const restoredUser = document.createElement('div');
        restoredUser.style.alignSelf = 'flex-end';
        restoredUser.style.background = 'linear-gradient(135deg, #5b7cff, #7b5bff)';
        restoredUser.style.padding = '14px 18px';
        restoredUser.style.borderRadius = '18px';
        restoredUser.style.maxWidth = '70%';
        restoredUser.textContent = item.textContent;
        chatBox.appendChild(restoredUser);

        const restoredAI = document.createElement('div');
        restoredAI.style.alignSelf = 'flex-start';
        restoredAI.style.background = '#1a1e27';
        restoredAI.style.padding = '14px 18px';
        restoredAI.style.borderRadius = '18px';
        restoredAI.style.maxWidth = '70%';
        restoredAI.innerHTML = '<span style="opacity:0.7">ü§ñ AI –¥—É–º–∞–µ—Ç‚Ä¶</span>';
        chatBox.appendChild(restoredAI);
      });

      textarea.value = '';
    }

    sendBtn.addEventListener('click', sendMessage);

    textarea.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });
  </script>
